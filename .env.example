# Configuration des APIs gratuites pour la transcription

# Hugging Face API Token (gratuit)
# Obtenez votre token gratuit sur : https://huggingface.co/settings/tokens
REACT_APP_HUGGING_FACE_TOKEN=hf_your_token_here

# Configuration pour la transcription avec AssemblyAI
REACT_APP_ASSEMBLY_AI_TOKEN=your_assembly_ai_token_here
REACT_APP_MISTRAL_API_KEY=your_mistral_api_key_here
REACT_APP_MISTRAL_ENABLED=false
REACT_APP_TRANSCRIPTION_TIMEOUT=30000
REACT_APP_EMOTION_TIMEOUT=15000
REACT_APP_IMAGE_TIMEOUT=3000

# Configuration générale
REACT_APP_DEFAULT_LANGUAGE=fr-FR
REACT_APP_DEMO_MODE=true
REACT_APP_TRANSCRIPTION_METHOD=auto
REACT_APP_EMOTION_API_ENABLED=true

# Mode démo (false pour utiliser les vraies APIs)
REACT_APP_DEMO_MODE=false

# Timeouts pour les différentes APIs (en millisecondes)
REACT_APP_TRANSCRIPTION_TIMEOUT=5000
REACT_APP_EMOTION_TIMEOUT=2000
REACT_APP_IMAGE_TIMEOUT=3000

# Configuration des APIs de transcription
# Options: 'auto', 'web-speech', 'hugging-face', 'mock'
REACT_APP_TRANSCRIPTION_METHOD=auto 