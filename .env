# Configuration des APIs de transcription
# Choisissez une option et configurez votre token

# Option 1: Hugging Face API (Gratuit avec limitations)
# 1. Allez sur https://huggingface.co/
# 2. Créez un compte gratuit
# 3. Allez dans Settings > Access Tokens
# 4. Créez un nouveau token avec le rôle "Read"
# 5. Copiez le token qui commence par "hf_" et collez-le ci-dessous
REACT_APP_HUGGING_FACE_TOKEN=hf_your_token_here

# Option 2: OpenAI Whisper API (Payant mais très précis)
REACT_APP_OPENAI_API_KEY=

# Option 3: Google Speech-to-Text API (Payant)
REACT_APP_GOOGLE_API_KEY=

# Option 4: Azure Speech Services (Payant)
REACT_APP_AZURE_SPEECH_KEY=
REACT_APP_AZURE_SPEECH_REGION=

# Configuration générale
REACT_APP_DEMO_MODE=false
REACT_APP_TRANSCRIPTION_METHOD=auto
REACT_APP_TRANSCRIPTION_TIMEOUT=30000
REACT_APP_EMOTION_TIMEOUT=15000
REACT_APP_IMAGE_TIMEOUT=3000

# Langue par défaut pour la transcription
REACT_APP_DEFAULT_LANGUAGE=fr-FR

# Configuration pour la transcription avec AssemblyAI
REACT_APP_ASSEMBLY_AI_TOKEN=585cf224714c4bb4972be9a25b7b0c9b

# Configuration pour l'analyse d'émotion avec AssemblyAI
REACT_APP_EMOTION_API_ENABLED=true 